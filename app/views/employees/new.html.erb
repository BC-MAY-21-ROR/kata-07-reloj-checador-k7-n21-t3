<%= render "shared/header" %>

<div class='main'>
  <div class="resources">
    <h2 class='title'>Create Company</h2>
    <%= form_with scope: :employee, url: employees_path, local:true, class:'form' do |f|%>
      <%= f.label :name ,class: 'form__label'%>
      <%= f.text_field :name, class: 'form__input' %>
      <%= f.label :email ,class: 'form__label'%>
      <%= f.text_field :email, class: 'form__input' %>
      <div class="col">
        <div class="row">
          <%= f.label :position ,class: 'form__label'%>
          <%= f.text_field :position, class: 'form__input' %>
        </div>
        <div class="row">
          <%= f.label :employee_num ,class: 'form__label'%>
          <%= f.number_field :employee_num, class: 'form__input' %>
        </div>
      </div>
      <div class="col">
        <div class="row">
          <%= f.label :company_id ,class: 'form__label'%>
          <%= f.select :company_id , @company.map {|t| [t.id]}, {}, class:'form__select'%>
        </div>
        <div class="row">
          <%= f.label :private_num ,class: 'form__label'%>
          <%= f.number_field :private_num, class: 'form__input' %>
        </div>
      </div>
      <div class="col">
        <%= link_to '<input class="form__button" type="button" value="Back">'.html_safe, employees_path %>
        <%= f.submit class: 'form__button' %>
      </div>
    <% end %>
    <% if @employee.errors.any? %>
      <h3 class="Error_title"> The following errors prevented the Employee from being saved</h3>
      <ul>
      <% @employee.errors.full_messages.each do |msg|%>
        <li><span><%= msg %></span></li>
      <% end %>
      </ul>
    <% end %>
  </div>
</div>
