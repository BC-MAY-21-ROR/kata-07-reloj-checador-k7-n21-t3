<nav class="navbar">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1" id="logo">
        <%= image_tag "foocorp.svg" %>
    </span>
    <div class="user_admin">
      <%= image_tag "admin.svg" %>
      <a href="">Admin</a>
    </div>
  </div>
</nav>
<div class="main">
  <div class="cont">
    <div class="clock">
      <h1 id="hour"></h1>
      <div class="seconds-container">
        <h5 id="meriedem"></h5>
        <h5 id="seconds"></h5>
      </div>
    </div>
    <%= form_with scope: :attendance, url: attendances_path, local:true do |form|%>
      <%= form.collection_select :company_id, Company.where(disable: false), :id, :name , {}%>
      <%=form.number_field :private_num, placeholder:"private number"%>
      <div>
        <%=form.submit "Check In/Out"%>
      </div>
    <% end %>
  </div>
</div>

<%= javascript_pack_tag 'clock' %>
